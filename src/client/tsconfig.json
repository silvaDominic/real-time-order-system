{
  "compilerOptions": {
    "target": "ESNext",                      // Specify ECMAScript target
    "module": "ESNext",                      // Specify module code generation
    "lib": ["DOM", "ESNext"],                // Specify library files to be included
    "jsx": "react-jsx",                      // Use the new JSX transform
    "strict": true,                          // Enable all strict type-checking options
    "moduleResolution": "node",              // Use Node.js module resolution strategy
    "esModuleInterop": true,                 // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references
  },
  "paths": {
    "application/*": [
      "application/*"
    ],
    "presentation/*": [
      "presentation/*"
    ],
    "shared/*": [
      "shared/*"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],       // Include all TypeScript and TSX files
  "exclude": ["node_modules", "dist"]       // Exclude node_modules and dist folders
}
